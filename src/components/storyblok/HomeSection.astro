---

const { blok } = Astro.props

---
<div class="h-full w-full grid place-items-center">
    <div class="flex flex-col justify-center items-start sm:gap-2">
		<h1 class="text-4xl sm:text-[80px] sm:my-6 font-bold text-white ">
			{ blok.header }
		</h1>
		<h2 class="text-3xl sm:text-[50px] text-slate-800/60 dark:text-slate-400">
			{ blok.subheader }
		</h2>
		<p class="sm:text-xl text-white max-w-[40ch]">
			{ blok.body }
		</p>
		<a href="#anchor-contact-section" class="rounded bg-white/80 p-3 mt-2 text-slate-800/80">
			{ blok.call_to_action }
		</a>
    </div>
</div>
