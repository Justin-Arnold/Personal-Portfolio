---
import Bubbles from "@/components/ClientBubbles.vue";
import WavesAnimation from "@/components/ClientWavesAnimation.vue";
import content from "@/utils/content";
---
<div class="h-screen relative bg-gradient-to-r from-primary to-secondary dark:from-primary/60 dark:to-secondary/60">
    <div class="absolute wrapper h-screen w-screen">
        <div class="h-full w-full grid place-items-center">
            <div class="flex flex-col justify-center items-start gap-1 sm:gap-0">
                <h1 class="text-4xl sm:text-[80px] font-bold text-white">
                    {content.name }
                </h1>
                <h2 class="text-3xl sm:text-[50px] text-slate-800/60 dark:text-slate-400">
                    { content.title }
                </h2>
                <p class="sm:text-xl text-white max-w-[40ch]">
                    { content.description }
                </p>
                <a href="#anchor-contact-section" class="btn btn-neutral cursor-pointer z-[100] mt-2">
                    { content.callToAction }
                </a>
            </div>
        </div>
    </div>
    <Bubbles class="absolute top-0 left-0 h-full" client:only="vue" />
    <WavesAnimation class="absolute bottom-0 left-0 -translate-y-[100%]" client:only="vue" />
</div>

<style>
    html {
        scroll-behavior: smooth;
    }
</style>
