const companies: {name: string, url: string}[] = [
    {
        name: 'Extra Space Storage',
        url: 'https://images.ctfassets.net/fynvlmu126fq/3MhRypLbWA7WwzbBFCK9R3/0f9861a14e069072a5a0a165ee257ba0/ess-logo.svg'
    }, {
        name: 'eWebData',
        url: 'https://ewebdata.com/wp-content/uploads/2022/08/Ewebdata-logo-updated-1-e1661457259624.png'
    }, {
        name: 'Internetwork Engineering',
        url: 'https://www.ineteng.com/hubfs/IE-Logo-White-01.png'
    } , {
        name: 'Gradecam',
        url: 'https://gradecam.com/wp-content/uploads/2020/07/logo-white.png'
    } , {
        name: 'University of Tennessee Medical Center',
        url: 'https://www.utmedicalcenter.org/themes/custom/finch/logo.svg'
    }
